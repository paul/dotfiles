# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  status_command i3status

  colors {
    background $Black
    separator  $Bright_Black
    statusline $White

    #State             Border        BG            Text
    focused_workspace  $White        $Bright_Black $White
    active_workspace   $White        $Yellow       $Black
    inactive_workspace $Bright_Black $Black        $Bright_Black
    urgent_workspace   $Red          $Red          $Black
    binding_mode       $Black        $Yellow       $Black
  }
}


# Basic color configuration using the Base16 variables for windows and borders.
#PropertyName           Border        BG     Text   Indicator     Child Border
client.focused          $Bright_Black $Cyan  $Black $Bright_Black $Bright_Black
client.focused_inactive $grey2        $grey2 $White $Yellow       $grey2
client.unfocused        $grey2        $Black $White $Red          $grey2
client.urgent           $Red          $Red   $Black $Red          $Red
client.placeholder      $Black        $Black $White $Black        $Black
client.background       $Bright_Black

